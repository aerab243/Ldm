#ifndef CONFIG_H
#define CONFIG_H

/* Project information */
#define PROJECT_NAME "Linux Download Manager"
#define PROJECT_VERSION "@PROJECT_VERSION@"
#define PROJECT_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define PROJECT_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define PROJECT_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define PROJECT_DESCRIPTION "@PROJECT_DESCRIPTION@"
#define PROJECT_HOMEPAGE "@PROJECT_HOMEPAGE@"
#define PROJECT_CONTACT "@PROJECT_CONTACT@"

/* Build configuration */
#define CMAKE_BUILD_TYPE "@CMAKE_BUILD_TYPE@"
#define CMAKE_SYSTEM_NAME "@CMAKE_SYSTEM_NAME@"
#define CMAKE_SYSTEM_VERSION "@CMAKE_SYSTEM_VERSION@"
#define CMAKE_SYSTEM_PROCESSOR "@CMAKE_SYSTEM_PROCESSOR@"

/* Qt configuration */
#define QT_VERSION_STR "@Qt6_VERSION@"
#cmakedefine HAVE_QT6_CHARTS

/* Feature availability */
#cmakedefine HAVE_LIBCURL
#cmakedefine HAVE_SQLITE3
#cmakedefine HAVE_FFMPEG
#cmakedefine HAVE_OPENSSL
#cmakedefine HAVE_CLAMAV
#cmakedefine HAVE_PROTOBUF
#cmakedefine HAVE_7ZIP
#cmakedefine HAVE_WEBRTC

/* Optional features */
#cmakedefine ENABLE_BROWSER_INTEGRATION
#cmakedefine ENABLE_NATIVE_MESSAGING
#cmakedefine ENABLE_STATISTICS
#cmakedefine ENABLE_ADVANCED_THEMES
#cmakedefine ENABLE_MEDIA_PREVIEW
#cmakedefine ENABLE_VIRUS_SCANNING
#cmakedefine ENABLE_COMPRESSION
